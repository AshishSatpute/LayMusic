<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown"
    tools:context=".activity.AllSongsActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brown"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:id="@+id/edittext1"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:hint="Search Here"
        android:textColor="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/AllSongslist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:layout_marginTop="2dp"
        android:scrollbars="none"
        android:divider="@null"
        android:dividerHeight="1dp"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_playlist_action"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brown"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_PlayList_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_PlayList_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/player_footer_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#24000000"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/playDurationrelease"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="12sp"
                android:text="0.40"
                android:textColor="@color/white" />
            <SeekBar
                android:id="@+id/songProgressBar"
                android:layout_width="0dp"
                android:layout_weight="0.60"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/songDurationrelease"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="0.40"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/media_shufflerelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="shuffle"
                android:background="@color/Transparent"
                android:src="@drawable/ic_shuffle_black_24dp"
                tools:ignore="OnClick,UnusedAttribute"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/media_rewrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="rewind"
                android:background="@color/Transparent"
                android:src="@android:drawable/ic_media_rew"
                tools:ignore="OnClick,UnusedAttribute" />

            <ImageButton
                android:id="@+id/media_pauserelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="pause"
                android:background="@color/Transparent"
                tools:ignore="OnClick,UnusedAttribute"
                android:src="@android:drawable/ic_media_pause"/>

            <ImageButton
                android:id="@+id/media_playrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="play"
                android:background="@color/Transparent"
                android:src="@android:drawable/ic_media_play"
                tools:ignore="OnClick,UnusedAttribute"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/media_fwrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="forward"
                android:background="@color/Transparent"
                android:src="@android:drawable/ic_media_ff"
                tools:ignore="OnClick,UnusedAttribute" />

            <ImageButton
                android:id="@+id/media_repeatrelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:onClick="repeat"
                android:background="@color/Transparent"
                android:src="@drawable/ic_repeat_black_24dp"
                tools:ignore="OnClick,UnusedAttribute"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>